@{
    Layout = null;
}
@Session.Timeout=120;
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>发货</title>
    <meta name="viewport" content="width=device-width,
                                     initial-scale=1.0,
                                     maximum-scale=1.0,
                                     user-scalable=no">
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/datepicker/default.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/datepicker/default.date.css" />
</head>

<body style="padding: 1em;">
    <div class="container" style="max-width: 400px;">
        <div class="row">
            <form role="form" action="saveWarehouseLog" method="post">
                <div class="form-group">
                    <label class="control-label" for="txt_logName" ><span style="color: red;">*</span>发货说明：</label>
                    <input type="text" class="form-control" id="txt_logName" name="LogName" placeholder="请输入日志名" required />
                </div>
                <div class="form-group">
                    <label class="control-label" for="txt_shipments" id="lbl_shipments"><span style="color: red;">*</span>发货数量：</label>
                    <input type="number" min="1" max="100000" class="form-control" id="txt_shipments" name="Shipments" placeholder="请输入发货数量" required />
                </div>
                <div class="form-group">
                    <div class="input-append date form_datetime">
                        <label class="control-label" for="txt_shippedDate"><span style="color: red;">*</span>发货日期：</label>
                        <input class="form-control datepicker" type="text" id="datetimepicker" name="ShippedDate" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button class="btn btn-primary" id="btn_save" type="submit">保存</button>
                        <button class="btn btn-primary" id="btn_save"  type="button" onclick="location.href = '/Warehouse/Warehouse'">返回</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="~/Scripts/js/addContract.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/bootstrap/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/bootstrap/bootstrap.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/datepicker/picker.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/datepicker/picker.date.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/datepicker/zh_CN.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/webshim/polyfiller.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript">
        var s1= @ViewBag.Reserves;
        $('.datepicker').pickadate({
            format: 'yyyy-mm-dd'
        });
        document.getElementById("datetimepicker").value = new Date().Format("yyyy-MM-dd");
    </script>
    <script type="text/javascript">
			webshim.activeLang('zh-CN');
			webshims.polyfill('forms');
			webshims.cfg.no$Switch = true;
        
    </script>
    <script type="text/javascript">
      $(function(){
        var reserves = s1;
        $('#lbl_shipments').html("<span style='color: red;'>*</span>发货数量：（库存量为 " + reserves + " 套/个）")
        $('#txt_shipments').attr("max", reserves);
      });
    </script>

</html>