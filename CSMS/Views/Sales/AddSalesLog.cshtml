@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>收款</title>
    <meta name="viewport" content="width=device-width,
                                     initial-scale=1.0,
                                     maximum-scale=1.0,
                                     user-scalable=no">
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/datepicker/default.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/datepicker/default.date.css" />
</head>

<body style="padding: 1em;">
    <div class="container" style="max-width: 400px;">
        <div class="row">
            <form action="SaveSalesLog" method="post" role="form" >
                <div class="form-group">
                    <label class="control-label" for="txt_logName"><span style="color: red;">*</span>收款说明：</label>
                    <input type="text" class="form-control" id="txt_logName" name="LogName" placeholder="" required />
                </div>
                <div class="form-group">
                    <label class="control-label" for="txt_services"><span style="color: red;">*</span>服务款项：</label>
                    <select class="form-control" id="txt_services" name="ServiceID"></select>
                </div>
                <div class="form-group">
                    <label class="control-label" for="txt_received" id="lbl_received"><span style="color: red;">*</span>收款金额：</label>
                    <div class="input-group">
                        <label class="input-group-addon">￥</label>
                        <input type="number" min="-10000000000" max="10000000000" step="0.01" class="form-control" id="txt_received" name="AffirmIncomeAmount" placeholder="请输入收款金额" required />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-append date form_datetime">
                        <label class="control-label" for="txt_affirmIncomeDate"><span style="color: red;">*</span>收款日期：</label>
                        <input class="form-control datepicker" type="text"  name="AffirmIncomeDate" id="datetimepicker">
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button class="btn btn-primary" id="btn_save" type="submit">保存</button>
                        <button class="btn btn-primary" id="btn_save"  type="button" onclick="location.href = '/Sales/Sales'">返回</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="~/Scripts/js/addSalesLog.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/addContract.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/bootstrap/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/bootstrap/bootstrap.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/datepicker/picker.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/datepicker/picker.date.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/datepicker/zh_CN.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/webshim/polyfiller.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript">
			$('.datepicker').pickadate({
				format: 'yyyy-mm-dd'
			});
			document.getElementById("datetimepicker").value = new Date().Format("yyyy-MM-dd");
    </script>
    <script type="text/javascript">
			webshim.activeLang('zh-CN');
			webshims.polyfill('forms');
			webshims.cfg.no$Switch = true;
    </script>
    <script  type="text/javascript">
        var s = "@ViewBag.service"
        var ss="@ViewBag.ss1"
        var Contract_DataJson = "@ViewBag.Contract_DataJson";
    </script>
    <script type="text/javascript">
      $(function(){
          var amountNotReceived = ss;
        $('#lbl_received').html("<span style='color: red;'>*</span>收款金额：（未收金额为 " + amountNotReceived + " 元）")
        $('#txt_received').attr("max", amountNotReceived);
      });
    </script>
</body>

</html>