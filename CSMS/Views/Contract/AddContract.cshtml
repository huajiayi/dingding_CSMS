@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width,
                                     initial-scale=1.0,
                                     maximum-scale=1.0,
                                     user-scalable=no" />
    <title>新建合同</title>

    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap/bootstrap.css"/>
    <link rel="stylesheet" type="text/css" href="~/Content/css/datepicker/default.css"/>
    <link rel="stylesheet" type="text/css" href="~/Content/css/datepicker/default.date.css"/>
</head>

<body style="padding: 1em;">
    <div class="container" style="max-width: 400px;">
        <div class="row">
            <form role="form" action="SaveContract" method="post">
                <div class="form-group">
                    <label class="control-label" for="txt_contractName">合同名称：</label>
                    <input type="text" class="form-control" id="txt_contractName" name="ContractName" placeholder="请输入合同名称" required />
                </div>
                <div class="form-group">
                    <label class="control-label" for="txt_customerName">合同方客户名称：</label>
                    <input type="text" class="form-control" id="txt_customerName" name="Customer" placeholder="请输入合同方客户名称" required />
                </div>
                <div class="form-group">
                    <label class="control-label" for="txt_contractType">合同类别：</label>
                    <select class="form-control" id="txt_contractType" name="Contract_Type" required>
                        <option value="风电监测系统">风电监测系统</option>
                        <option value="水泵监测系统">水泵监测系统</option>
                        <option value="格莱茵CMS">格莱茵CMS</option>
                        <option value="监测服务收入">监测服务收入</option>
                        <option value="培训收入">培训收入</option>
                        <option value="软件收入">软件收入</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label" for="txt_contractAmount">合同金额：</label>
                    <div class="input-group">
                        <label class="input-group-addon">￥</label>
                        <input type="number" min="0" max="10000000000" step="0.01" class="form-control" id="txt_contractAmount" name="Contract_Amount" placeholder="请输入合同金额" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="txt_count">数量：</label>
                    <div class="input-group">
                        <input type="number" min="0" max="100000" class="form-control" id="txt_count" name="Count" placeholder="请输入数量" required />
                        <label class="input-group-addon">套&nbsp;/&nbsp;个</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="txt_contractNumber">合同编号：</label>
                    <input type="text" class="form-control" id="txt_contractNumber" name="Contract_Number" placeholder="请输入合同编号" required />
                </div>
                <div class="form-group">
                    <div class="input-append date form_datetime">
                        <label class="control-label" for="txt_signatureDate">合同签署日期：</label>
                        <input class="form-control datepicker" type="text" id="datetimepicker" name="Contract_Date" required />
                    </div>
                </div>
                <div class="form-group" id="services">
                    <label class="control-label">服务款项：</label>
                    <input type="text" class="form-control" id="txt_service1" name="Service" placeholder="请输入服务款项" required />
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button class="btn btn-default" onclick="addService();return false;"><span class="glyphicon glyphicon-plus" style="color: dodgerblue;"></span></button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button class="btn btn-primary" id="btn_save" type="submit">保存</button>
                    </div>
                </div>
      
                <input type="hidden" class="form-control" id="txt" name="I" />
               </form>
</div>
    </div>

    <script src="~/Scripts/js/addContract.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/bootstrap/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/bootstrap/bootstrap.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/datepicker/picker.js"type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/datepicker/picker.date.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/datepicker/zh_CN.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/webshim/polyfiller.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript">
        $("#txt").val(serviceIndex);
			$('.datepicker').pickadate({
				format: 'yyyy-mm-dd'
			});
			document.getElementById("datetimepicker").value = new Date().Format("yyyy-MM-dd");
    </script>
    <script type="text/javascript">
			webshim.activeLang('zh-CN');
			webshims.polyfill('forms');
			webshims.cfg.no$Switch = true;
    </script>
</body>

</html>