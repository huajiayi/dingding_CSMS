    <script type="text/javascript">
      $(function(){
          var amountNotReceived = ss;
          $('#hhh').html("<span style='color: red;'>*</span>确认收入金额（不含税）（总金额： " + amountNotReceived + " 元）")
          $('#txt_affirmIncomeAmount').attr("max", amountNotReceived);
      });
    </script>
</body>

</html>